{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "store-new-app",
  "type": "object",
  "properties": {
    "storeName": {
      "type": "string",
      "description": "New Store Name",
      "x-prompt": {
        "message": "Whats is the new Store Name?",
        "type": "string"
      }
    },
    "apiUrlDev": {
      "type": "string",
      "description": "API URL Dev",
      "x-prompt": {
        "message": "Whats is the API URL to Dev environment?",
        "type": "string"
      }
    },
    "apiUrlStg": {
      "type": "string",
      "description": "API URL Staging",
      "x-prompt": {
        "message": "Whats is the API URL to Staging environment?",
        "type": "string"
      }
    },
    "apiUrlProd": {
      "type": "string",
      "description": "API URL Production",
      "x-prompt": {
        "message": "Whats is the API URL to Production environment?",
        "type": "string"
      }
    },
    "moduleList": {
      "type": "array",
      "description": "Add the App Modules",
      "x-prompt": {
        "message": "Select the App Modules Available",
        "type": "list",
        "items": [
          { "value": "products", "label": "Productos" },
          { "value": "sellers", "label": "Vendedores" },
          { "value": "shippingOrders", "label": "Pedidos" }
        ]
      }
    }
  },
  "required": ["storeName", "apiUrlDev", "apiUrlStg", "apiUrlProd"]
}
